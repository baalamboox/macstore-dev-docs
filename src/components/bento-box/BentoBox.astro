---
import '/src/css/root.css';
import '/src/css/buttons.css';
import '/src/css/bento-home.css';
---

<style scoped>
    :not(a, strong, em, del, span, input, code, br) + :not(a, strong, em, del, span, input, code, br, :where(.not-content *)) {
        margin-top: unset !important;
    }

    :is(img, picture, video, canvas, svg, iframe):not(:where(.not-content *)) {
        display: flex !important;
    }

    .bb__bbc {
        padding: 24px;
    }

    .details__button {
        margin-top: 16px !important;
    }

    @media screen and (min-width: 1220px) {
        .collage__card:nth-child(3n-2) {
            width: 100%;
        }
    }

    @media screen and (min-width: 1000px) {
        .collage__card:nth-child(3n), .collage__card:nth-child(3n-1) {
            width: 100%;
            max-width: 100%;
        }
    }
</style>

<section class="bb">
    <div class="bb__bbc">
        <div class="bbc__collage">
            <div class="collage__card">
                <div class="card__details">
                    <p class="details__tags nuevo">NUEVO</p>
                    <p class="details__title">iPhone 16 Pro</p>
                    <div class="details__dp">
                        <p class="dp__description">Hola, Apple intelligence</p>
                        <p class="dp__price">Desde $25,999.00</p>
                    </div>
                    <div class="details__button">
                        <a href="/productos/compra/iphone718" class="boton boton-primario">
                            <span>Comprar</span>
                        </a>
                    </div>
                </div>
                <div class="card__pc">
                    <div class="pc__media">
                        <picture>
                            <img class="media__picture"
                                srcset="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_iphone.webp"
                                src="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_iphone.png"
                                sizes="(min-width: 1220px) 750px, (min-width: 750px) 500px, calc(100vw - 30px)"
                                alt="iPhone 16 Pro" loading="lazy" width="550" height="550" />
                        </picture>
                    </div>
                </div>
            </div>
            <div class="collage__card collage__card--reverse">
                <div class="card__details card__details--small">
                    <p class="details__tags nuevo">NUEVO</p>
                    <p class="details__title">MacBook Pro M4</p>
                    <div class="details__dp">
                        <p class="dp__description">Más velocidad para hacer más de lo que te gusta.</p>
                        <p class="dp__price">Desde $37,999.00</p>
                    </div>
                    <div class="details__button">
                        <a href="/productos/compra/comapp1217" class="boton boton-primario">
                            <span>Comprar</span>
                        </a>
                    </div>
                </div>
                <div class="card__pc">
                    <div class="pc__media pc__media--small">
                        <picture>
                            <img class="media__picture"
                                srcset="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_mac_m4.webp"
                                src="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_mac_m4.png"
                                sizes="(min-width: 1220px) 750px, (min-width: 750px) 500px, calc(100vw - 30px)"
                                alt="iPad Pro M4" loading="lazy" width="464" height="600" />
                        </picture>
                    </div>
                </div>
            </div>
            <div class="collage__card collage__card--reverse">
                <div class="card__details card__details--small">
                    <p class="details__tags nuevo">NUEVO</p>
                    <p class="details__title">Mac mini M4</p>
                    <div class="details__dp">
                        <p class="dp__description">Es pequeña. Es enorme.</p>
                        <p class="dp__price">Desde $14,499.00 </p>
                    </div>
                    <div class="details__button">
                        <a href="/productos/compra/comapp1186" class="boton boton-primario">
                            <span>Comprar</span>
                        </a>
                    </div>
                </div>
                <div class="card__pc">
                    <div class="pc__media pc__media--small">

                        <picture>
                            <img class="media__picture"
                                srcset="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_mac_mini_m4.webp"
                                src="https://webonline.macstore.mx/img/cx/media/bento-grid/bento_mac_mini_m4.png"
                                sizes="(min-width: 1220px) 750px, (min-width: 750px) 500px, calc(100vw - 30px)"
                                alt="iPad Pro M4" loading="lazy" width="464" height="600" />
                        </picture>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
